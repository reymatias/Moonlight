<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="helios.moonlight_android.MenuActivity">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bluetooth_btn"
        android:src="@drawable/ic_bluetooth_connected_white_48dp"
        android:adjustViewBounds="true"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/favorites_btn"
        android:layout_marginTop="31dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/search_btn"
        android:layout_below="@+id/bluetooth_btn"
        android:layout_alignParentStart="true"
        android:layout_marginTop="39dp"
        android:src="@drawable/ic_search_white_48dp"
        android:layout_marginLeft="10dp"
        android:adjustViewBounds="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/favorites_btn"
        android:layout_alignTop="@+id/search_btn"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_star_white_48dp"
        android:adjustViewBounds="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/maps_btn"
        android:layout_alignTop="@+id/search_btn"
        android:layout_alignParentEnd="true"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_gps_fixed_white_48dp"
        android:layout_marginRight="10dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/profile_btn"
        android:src="@drawable/ic_person_white_48dp"
        android:layout_below="@+id/favorites_btn"
        android:layout_alignStart="@+id/favorites_btn"
        android:layout_marginTop="62dp"
        android:adjustViewBounds="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/report_btn"
        android:src="@drawable/ic_warning_amber_48dp"
        android:layout_marginLeft="40dp"
        android:layout_below="@+id/profile_btn"
        android:layout_toStartOf="@+id/profile_btn"
        android:layout_marginTop="32dp"
        android:adjustViewBounds="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/return_btn"
        android:src="@drawable/ic_arrow_back_white_48dp"
        android:layout_alignTop="@+id/report_btn"
        android:layout_toEndOf="@+id/profile_btn"
        android:adjustViewBounds="true" />

</RelativeLayout>
