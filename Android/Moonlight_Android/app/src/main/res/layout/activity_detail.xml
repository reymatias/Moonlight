<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout

            android:layout_width="199dp"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout2"
            android:layout_weight="2.94"
            android:orientation="vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_margin="15dp">

            <TextView
                android:layout_width="wrap_content"

                android:layout_weight="1"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Title"
                android:id="@+id/Title"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"

                android:layout_weight="1"
                android:text="ID"
                android:id="@+id/ID"
                android:layout_height="0dp" />

            <TextView
                android:layout_width="wrap_content"

                android:layout_weight="1"
                android:text="Serial"
                android:id="@+id/Serial"
                android:layout_height="0dp" />

            <TextView
                android:layout_width="wrap_content"

                android:layout_weight="1"
                android:text="Manufacturer"
                android:id="@+id/Manufacturer"
                android:layout_height="0dp" />

            <TextView
                android:layout_width="wrap_content"

                android:layout_weight="1"
                android:text="Model"
                android:id="@+id/Model"
                android:layout_height="0dp" />

            <TextView
                android:layout_width="wrap_content"

                android:layout_weight="1"
                android:text="Year"
                android:id="@+id/Year"
                android:layout_height="0dp" />

            <TextView
                android:layout_width="wrap_content"

                android:layout_weight="1"
                android:text="Frame size"
                android:id="@+id/Frame_size"
                android:layout_height="0dp" />

            <TextView
                android:layout_width="wrap_content"

                android:layout_weight="1"
                android:text="Frame Material"
                android:id="@+id/Frame_Material"
                android:layout_height="0dp" />

            <TextView
                android:layout_width="wrap_content"

                android:layout_weight="1"
                android:text="Handlebar type"
                android:id="@+id/Handlebar_type"
                android:layout_height="0dp" />


            <TextView
                android:layout_width="wrap_content"

                android:layout_weight="1"
                android:text="Primary colors"
                android:id="@+id/Primary_colors"
                android:layout_height="0dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:text="Phone number:"
                android:id="@+id/Phone_number"
                android:layout_height="0dp" />

            <TextView
                android:layout_width="wrap_content"

                android:layout_weight="1"
                android:text="Location"
                android:id="@+id/Location"
                android:layout_height="0dp" />

            <TextView
                android:layout_width="wrap_content"

                android:layout_weight="1"
                android:text="Locking description"
                android:id="@+id/Locking_description"
                android:layout_height="0dp" />
<!--
            <TextView
                android:layout_width="wrap_content"

                android:layout_weight="1"
                android:text="Locking circumvented"
                android:id="@+id/Locking_circumvented"
                android:layout_height="0dp" />-->

            <TextView
                android:layout_width="wrap_content"

                android:layout_weight="1"
                android:text="Date stolen"
                android:id="@+id/Date_stolen"
                android:layout_height="0dp" />

            <TextView
                android:layout_width="wrap_content"

                android:layout_weight="2.52"
                android:text="Description"
                android:id="@+id/Description"
                android:layout_height="0dp" />

            <TextView
                android:layout_width="wrap_content"

                android:layout_weight="1"
                android:text="Police report #"
                android:id="@+id/Police_report"
                android:layout_height="0dp" />

            <TextView
                android:layout_width="wrap_content"

                android:layout_weight="1"
                android:text="Department &amp; city"
                android:id="@+id/Department_city"
                android:layout_height="0dp" />

            <ImageView
                android:layout_marginTop="10dp"
                android:layout_width="257dp"
                android:layout_height="match_parent"
                android:id="@+id/bike_image"
                android:layout_gravity="center_horizontal"
                android:adjustViewBounds="true" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>